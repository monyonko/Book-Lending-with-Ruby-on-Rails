
<div class="enclose_form">
    <% if alert = flash[:alert] %>
    <%= alert %>
    <% end %>
    <%= form_with model: @user, url: session_url, class: "contents" do |form| %>

    <p class="form_heading">Sign Up</p>
    <div class="form_field">
        <%= form.label :username%>
        <%= form.text_field :username, required: true, value: params[:email_address]%>
    </div>
    <div class="form_field">
        <%= form.label :email%>
        <%= form.email_field :email_address, required: true, value: params[:email_address]%>
    </div>
    <div class="form_field">
        <%= form.label :password%>
        <%= form.password_field :password, required: true, placeholder: "Enter your password", maxlength: 72%>
    </div>
    <div class="form_field">
        <%= form.label :password_confirmation%>
        <%= form.password_field :password, required: true, placeholder: "Confirm your password", maxlength: 72%>
    </div>
    <div class="form_other_field ">
        <%= form.check_box(:terms, checked: false)%>
        <%= form.label :accept_our_terms_of_service%>
    </div>
    <div class="form_other_field end">
        <%= form.submit "Login", class:'login' %>
        <%= form.submit "Register", class:'signup' %>
    </div>

</div>




 

   
   

   
     
       

   
 <% end %>
